{
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "groupName": "Dependencies (non-major)"
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": true,
      "groupName": "Dependencies (major)"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^.*go$"
      ],
      "matchStrings": [
        "\\s(?<depName>go)-version: (?<currentValue>.*?)\n/gm"
      ],
      "datasourceTemplate": "go"
    }
  ]
}
